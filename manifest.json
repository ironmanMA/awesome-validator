{
  "manifest_version": 2,

  "name": "BoomRev",
  "description": "This extension helps Validation team do manual-matching faster and better.",
  "version": "2.1",

  "icons": {
    "128": "Icon-128.png",
    "64": "Icon-64.png",
    "32": "Icon-32.png"
  },

  "browser_action": {
    "default_icon": "Icon-128.png",
    "default_popup": "popup.html",
    "default_title": "BoomRev : Faster and better matching"
  },

  "web_accessible_resources": [
    "verdict-template.html"
  ],

  "content_scripts": [
      {
        "matches": [ "http://www.staples.com/*", "http://staples.com/*", "https://www.staples.com/*", "https://staples.com/*",
                            "http://www.amazon.com/*", "http://amazon.com/*", "https://www.amazon.com/*", "https://amazon.com/*"],                            
        "css": ["main-style.css", "widget.css"],
        "js": ["jquery.js","verdictTemplateInsert.js","verdictCaptureInsert.js"]
      },

      {
        "matches": ["http://www.matching-review.rboomerang.com.com/*", "http://matching-review.rboomerang.com.com/*", "https://www.matching-review.rboomerang.com.com/*", "https://matching-review.rboomerang.com.com/*" ],
        "css": ["widget.css", "main-style.css"],
        "js": ["jquery.js", "verdictFetch.js"]
      },

      {
        "matches": ["http://*/*", "https://*/*" ],
        "css": ["widget.css", "main-style.css"],
        "js": ["jquery.js", "verdictFetch.js"]
      }

  ],

  "permissions": [
      "http://*/*", 
      "https://*/*",
      "contextMenus", 
      "notifications", 
      "tabs",
      "storage"
  ],

  "background": {
    "scripts": ["jquery.js", "background.js"],
    "persistent": false
  }
}